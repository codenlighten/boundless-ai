{
  "schemaVersion": 2,
  "dockerfilePath": "./Dockerfile",
  "displayName": "Boundless AI Assistant",
  "description": "Enterprise AI assistant with JWT authentication, persistent memory, and secure terminal execution. Unified API with role-based access control.",
  "isComposeFile": false,
  "ports": [
    {
      "containerPort": 3001,
      "hostPort": 80,
      "protocol": "http",
      "description": "Main API endpoint"
    }
  ],
  "volumes": [
    {
      "containerPath": "/app/sessions",
      "hostPath": "/var/lib/captain/volumes/boundless-ai-sessions",
      "volumeName": "boundless-ai-sessions",
      "description": "Chat and terminal session storage"
    },
    {
      "containerPath": "/app/auditlogs",
      "hostPath": "/var/lib/captain/volumes/boundless-ai-auditlogs",
      "volumeName": "boundless-ai-auditlogs",
      "description": "Audit log storage (JSONL format)"
    }
  ],
  "environment": {
    "NODE_ENV": "production",
    "CHAT_PORT": "3001",
    "LLM_PROVIDER": "openai",
    "OPENAI_API_KEY": "$$cap_OPENAI_API_KEY",
    "JWT_SECRET": "$$cap_JWT_SECRET",
    "DISABLE_COMMAND_WHITELIST": "true"
  },
  "environmentDescription": {
    "cap_OPENAI_API_KEY": {
      "description": "OpenAI API key for GPT models",
      "isPassword": true,
      "required": true
    },
    "cap_JWT_SECRET": {
      "description": "Secret key for JWT token signing (leave empty to auto-generate)",
      "isPassword": true,
      "required": false
    }
  },
  "caproverExtra": {
    "dockerRunCmd": "-d --restart unless-stopped --memory 512m --memory-swap 1g",
    "notExposeAsWebApp": false,
    "containerHttpPort": "3001"
  },
  "version": "1.0.0"
}
